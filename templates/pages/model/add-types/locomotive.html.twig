{#                            </div>#} {# TODO: Photo uploader #}
                            <div class="col-12">
                                <div class="form-group">
                                    {{ form_label(form.train.station) }}
                                    <div class="select2-danger">
                                        {{ form_widget(form.train.station, {'attr': {'class': 'form-control select2', "data-dropdown-css-class": "select2-danger"}}) }}
                                    </div>
                                </div>
                                <!-- /.form-group -->
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        {{ form_row(form.submit, {'attr': {'class': 'btn btn-block bg-gradient-danger'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>