<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Lista wagonów</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">Modele</li>
                    <li class="breadcrumb-item">Lista modeli</li>
                    <li class="breadcrumb-item active">Lista wagonów</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-bordered table-hover datatable">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Typ i numer wagonu</th>
                                <th>Skład</th>
                                <th>Komentarze</th>
                                <th>Edycja</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for car in models %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ car.type ~ ' ' ~ car.number }}</td>
                                    <td>{{ car.train.locomotive.typeAndNumber }}</td>
                                    <td>{{ car.comments }}</td>
                                    <td class="text-center">
                                        <a href="{{ path('model_edit_type', {'id': car.id, 'type': 'wagon'}) }}" class="text-danger"><i class="fas fa-edit"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>